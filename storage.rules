rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    match /assets/{path=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /uploads/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Медиа-файлы для вопросов тестов
    match /tests/{testId}/questions/{questionId}/{fileName} {
      allow read: if true; // Все могут читать медиа в тестах
      allow write, delete: if isAdmin(); // Только админы могут загружать/удалять
    }
  }
}
