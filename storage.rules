rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAdminOrSuperAdmin() {
      return request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'super-admin');
    }

    match /assets/{path=**} {
      allow read: if true;
      allow write: if isAdminOrSuperAdmin();
    }

    match /uploads/{userId}/{path=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Медиа-файлы для вопросов тестов
    match /tests/{testId}/questions/{questionId}/{fileName} {
      allow read: if true; // Все могут читать медиа в тестах
      allow write, delete: if isAdminOrSuperAdmin(); // Админы и супер-админы могут загружать/удалять
    }
  }
}
